{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["./src/app/ui/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@router/*": ["./src/app/router/*"],
      "@assets/*": ["./src/assets/*"],
      "@domains/*": ["./src/domains/*"],
    }
  }
}
